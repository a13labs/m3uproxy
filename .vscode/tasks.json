{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: start",
            "type": "shell",
            "command": "npm start",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/player"
            },
            "problemMatcher": [
                {
                    "owner": "custom",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "webpack-dev-server --no-open",
                        "endsPattern": "compiled successfully"
                    }
                }
            ]
        },
        {
            "label": "npm: stop",
            "type": "shell",
            "command": "kill $(lsof -t -i:3000) && kill $(lsof -t -i:8080)",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}